{
  "workspace": {
    "name": "RealEST - Property Marketplace",
    "description": "Vetted & Verified Property Marketplace for Nigeria (realest.ng)",
    "icon": "ğŸ ",
    "color": "#B6FF00"
  },
  "context_files": [
    "docs/zed-context-realest-design-system.md",
    ".zed_context",
    "README.md",
    "docs/README.md",
    "docs/ROADMAP.md",
    "docs/RealEST Branding.md",
    "docs/realest-ng-new-design-architecture.md",
    "docs/page-structure.md"
  ],
  "project_settings": {
    "auto_save": "on_focus_change",
    "tab_size": 2,
    "soft_wrap": "editor_width",
    "show_whitespace": "selection",
    "enable_language_server": true,
    "format_on_save": true
  },
  "file_associations": {
    "*.tsx": "typescript",
    "*.ts": "typescript",
    "*.js": "javascript",
    "*.jsx": "javascript",
    "*.css": "css",
    "*.json": "json",
    "*.md": "markdown"
  },
  "folders": [
    {
      "name": "ğŸ“ Components",
      "path": "components",
      "expanded": true
    },
    {
      "name": "ğŸ¨ UI Components",
      "path": "components/ui",
      "expanded": false
    },
    {
      "name": "ğŸ“„ Pages",
      "path": "app",
      "expanded": true
    },
    {
      "name": "ğŸ”§ Utilities",
      "path": "lib",
      "expanded": false
    },
    {
      "name": "ğŸ­ Styles",
      "path": "styles",
      "expanded": false
    },
    {
      "name": "ğŸ“š Documentation",
      "path": "docs",
      "expanded": false
    },
    {
      "name": "ğŸ—„ï¸ Database",
      "path": "supabase",
      "expanded": false
    }
  ],
  "quick_actions": [
    {
      "name": "ğŸš€ Start Development",
      "command": "task dev",
      "description": "Start Next.js development server"
    },
    {
      "name": "ğŸ—ï¸ Build Project",
      "command": "task build",
      "description": "Build production version"
    },
    {
      "name": "ğŸ—„ï¸ Start Supabase",
      "command": "task supabase:start",
      "description": "Start local Supabase instance"
    },
    {
      "name": "ğŸ¨ Format Code",
      "command": "task format",
      "description": "Format all files with Prettier"
    },
    {
      "name": "ğŸ” Type Check",
      "command": "task type-check",
      "description": "Run TypeScript type checking"
    },
    {
      "name": "ğŸ“‹ Generate Types",
      "command": "task supabase:generate-types",
      "description": "Generate Supabase TypeScript types"
    }
  ],
  "terminal": {
    "shell": {
      "program": "/bin/bash",
      "args": ["-l"]
    },
    "working_directory": "${workspace_root}",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "search": {
    "include": [
      "app/**/*",
      "components/**/*",
      "lib/**/*",
      "styles/**/*",
      "docs/**/*.md",
      "*.json",
      "*.ts",
      "*.tsx",
      "*.js",
      "*.jsx",
      "*.css"
    ],
    "exclude": [
      ".next/**/*",
      "node_modules/**/*",
      ".git/**/*",
      "**/*.log",
      "dist/**/*",
      ".supabase/**/*"
    ]
  },
  "extensions": {
    "recommended": [
      "typescript",
      "react",
      "tailwindcss",
      "prettier",
      "eslint"
    ]
  },
  "ai_assistant": {
    "context_awareness": "high",
    "code_completion": true,
    "design_system_enforcement": true,
    "cultural_sensitivity": {
      "region": "Nigeria",
      "market": "Real Estate"
    },
    "brand_guidelines": {
      "primary_color": "#242834",
      "accent_color": "#B6FF00",
      "secondary_color": "#7D53FF",
      "typography": ["Space Grotesk", "Neulis Neue", "Lufga", "JetBrains Mono"]
    }
  },
  "debugging": {
    "configurations": [
      {
        "name": "Next.js",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["dev"],
        "console": "integratedTerminal",
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }
}
